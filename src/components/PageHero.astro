---
import { Button } from "@/components/ui/button";
import heroImage from "../assets/meme-fiends-hero.png";
import { ChevronRightIcon } from "lucide-react";
import { Picture } from "astro:assets";

interface Props {
  badgeText: string;
  title: string;
  description: string;
}

const { badgeText, title, description } = Astro.props;
---

<section class="container mx-auto px-4 py-12">
  <div class="bg-gradient-to-r from-[#f9fafb] to-[#f9fafb]/50 rounded-xl p-8 md:p-12 relative overflow-hidden">
    <div>
      <div class="flex justify-between">
        <div class="max-w-xl">
          <div class="inline-block bg-brand-1 text-black text-sm font-medium px-3 py-1 rounded-full mb-6">
            {badgeText}
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-[#212b36] mb-4">
            {title}
          </h1>
          <p class="text-muted-foreground mb-8">
            {description}
          </p>
          <Button size="lg">
            Start Now
            <ChevronRightIcon size={18} className="ml-1" />
          </Button>
        </div>
        <Picture src={heroImage} alt="Hero Image" width={400} densities={[1.5, 2]} formats={['avif', 'webp']} />
      </div>
      <div class="flex justify-center gap-2 absolute bottom-6 left-1/2 transform -translate-x-1/2">
        <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
        <div class="w-6 h-2 rounded-full bg-brand-1"></div>
        <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
        <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
      </div>
    </div>
  </div>
</section>
