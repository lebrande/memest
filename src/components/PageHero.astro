---
import { Button } from "@/components/ui/button";
import heroImage from "../assets/meme-fiends-hero.png";
import { ChevronRightIcon } from "lucide-react";
import { Picture } from "astro:assets";

interface Props {
  badgeText: string;
  title: string;
  description: string;
}

const { badgeText, title, description } = Astro.props;
---

<section class="container mx-auto px-4 py-12">
  <div class="bg-gradient-to-r from-[#f9fafb] to-[#f9fafb]/50 rounded-xl p-8 md:p-12 space-y-8">
    <div class="flex flex-col-reverse md:flex-row justify-between">
      <div class="max-w-xl">
        <div class="inline-block bg-brand-1 text-black text-sm font-medium px-3 py-1 rounded-full mb-6">
          {badgeText}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-[#212b36] mb-4">
          {title}
        </h1>
        <p class="text-muted-foreground mb-8">
          {description}
        </p>
        <Button size="lg" className="w-full sm:w-auto">
          Start Now
          <ChevronRightIcon size={18} className="ml-1" />
        </Button>
      </div>
      <div class="flex items-center justify-center">
        <img src={heroImage.src} alt="Hero Image" width={400} />
      </div>
    </div>
    <div class="flex justify-center gap-2">
      <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
      <div class="w-6 h-2 rounded-full bg-brand-1"></div>
      <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
      <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
    </div>
  </div>
</section>
