---
import { SearchIcon } from "lucide-react";
---

<header class="container mx-auto px-4 py-4 flex items-center justify-between">
  <div class="flex items-center gap-8">
    <div class="flex items-center">
      <div class="bg-black text-white font-bold px-2 py-1 rounded-md">Pump</div>
      <div class="bg-black text-white px-2 py-1 rounded-md">Social</div>
    </div>
    <nav class="hidden md:flex items-center gap-6">
      <a href="#" class="flex items-center text-sm font-medium">
        <span class="w-2 h-2 rounded-full bg-[#66ff00] mr-2"></span>
        Home
      </a>
      <a href="#" class="text-sm font-medium text-[#637381]">
        Explore
      </a>
      <a href="#" class="text-sm font-medium text-[#637381]">
        My Giveaways
      </a>
    </nav>
  </div>
  <div class="flex items-center gap-4">
    <button class="text-[#637381]">
      <SearchIcon size={20} />
    </button>
    <button class="bg-[#212b36] text-white rounded-md px-4 py-2 text-sm font-medium flex items-center">
      <span class="mr-1">+</span> Create Giveaway
    </button>
    <button class="bg-[#212b36] text-white rounded-md px-4 py-2 text-sm font-medium">Connect</button>
  </div>
</header>

