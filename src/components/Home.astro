---
import { ChevronLeftIcon, ChevronRightIcon } from "lucide-react";
import Navigation from "./navigation.astro";
---

<div class="min-h-screen bg-white">
  <Navigation />

  {/* Hero Section */}
  <section class="container mx-auto px-4 py-12">
    <div class="bg-gradient-to-r from-[#f9fafb] to-[#f9fafb]/50 rounded-xl p-8 md:p-12 relative overflow-hidden">
      <div class="max-w-xl">
        <div class="inline-block bg-[#66ff00] text-[#040404] text-sm font-medium px-3 py-1 rounded-full mb-6">
          Earn up to $500 by just a single meme
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-[#212b36] mb-4">üèÜ Generate. Post. Earn.</h1>
        <p class="text-[#637381] mb-8">Compete for USDC rewards - turn your tweets into crypto gains!</p>
        <button class="bg-[#212b36] text-white rounded-md px-6 py-3 font-medium flex items-center">
          Start Now
          <ChevronRightIcon size={18} className="ml-1" />
        </button>
      </div>
      <div class="flex justify-center gap-2 absolute bottom-6 left-1/2 transform -translate-x-1/2">
        <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
        <div class="w-6 h-2 rounded-full bg-[#66ff00]"></div>
        <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
        <div class="w-2 h-2 rounded-full bg-[#637381]/30"></div>
      </div>
    </div>
  </section>

  {/* Hot Giveaways */}
  <section class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-[#212b36] flex items-center">üî• Hot Giveaways</h2>
      <div class="flex gap-2">
        <button class="p-2 rounded-full border border-[#637381]/20">
          <ChevronLeftIcon size={18} />
        </button>
        <button class="p-2 rounded-full border border-[#637381]/20">
          <ChevronRightIcon size={18} />
        </button>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      {[
        { name: "DOGE AI", image: "/placeholder.svg?height=120&width=120" },
        { name: "PEPE FORK", image: "/placeholder.svg?height=120&width=120" },
        { name: "STONKS", image: "/placeholder.svg?height=120&width=120" },
        { name: "Bulb", image: "/placeholder.svg?height=120&width=120" },
        { name: "Base God", image: "/placeholder.svg?height=120&width=120" },
        { name: "Vita Inu", image: "/placeholder.svg?height=120&width=120" },
      ].map((giveaway) => (
        <div class="bg-white rounded-xl border border-[#637381]/10 p-4 flex flex-col items-center">
          <div class="relative mb-2">
            <div class="absolute top-0 left-0 bg-[#212b36] text-white text-xs px-2 py-1 rounded-md">
              02 : 03 : 40
            </div>
            <img
              src={giveaway.image || "/placeholder.svg"}
              alt={giveaway.name}
              width={120}
              height={120}
              class="rounded-full"
            />
          </div>
          <h3 class="font-bold text-[#212b36] mb-2">{giveaway.name}</h3>
          <div class="flex items-center mb-3">
            <div class="flex -space-x-2">
              <div class="w-6 h-6 rounded-full bg-pink-300 border-2 border-white"></div>
              <div class="w-6 h-6 rounded-full bg-blue-300 border-2 border-white"></div>
              <div class="w-6 h-6 rounded-full bg-purple-300 border-2 border-white"></div>
            </div>
            <span class="text-sm text-[#637381] ml-1">+999</span>
          </div>
          <button class="w-full bg-[#66ff00] text-[#040404] text-sm font-medium py-1 rounded-md">
            $500 USDC
          </button>
        </div>
      ))}
    </div>
  </section>

  {/* Lorem Ipsum Section */}
  <section class="container mx-auto px-4 py-12">
    <h2 class="text-2xl font-bold text-[#212b36] mb-6">Lorem Ipsum</h2>
    <div class="border-b border-[#637381]/20">
      <div class="flex gap-8">
        <button class="text-[#212b36] font-medium pb-3 border-b-2 border-[#212b36]">Category</button>
        <button class="text-[#637381] pb-3">Category</button>
        <button class="text-[#637381] pb-3">Category</button>
      </div>
    </div>
  </section>
</div>